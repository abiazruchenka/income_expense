<script>
    $(document).ready(function() {

    $('.datepicker').datetimepicker({
        format: 'dd/mm/yyyy'
    });
});</script>
<strong>Hallo <%=current_user.first_name + ' ' + current_user.last_name%>!</strong>

<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Incomes/Expenses table</h1>

<form class="form-inline">
  <div class="form-group">
    <%=label_tag :select_date %>
    <div class='input-group date' id='datetimepicker1'>
      <input type='text' class="form-control" name="datepicker" />
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker({
                format: "MMMM DD,YYYY"
            });
        });
    </script>
  </div>
  <div class="form-group">
    <%=label_tag :select_category %>
    <%=select_tag(:select_category, options_for_select([['All', 0],['Incomes', 1], ['Expenses', 2]], 0),:class=>"form-control search")%>
  </div>
  <div id="reset" class="btn btn-default">Reset</div>
  <button type="submit" class="btn btn-primary">Send</button>
</form>

  <table class="table table-striped">

     <thead>
    <tr>
      <th>Value</th>
      <th>Category</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @summary.each do |expense| %>
        <tr>
          <td><strong><%= expense.value %> $</strong></td>
          <% if expense.respond_to?(:expense_category)%>
            <td><strong class="red">Expense <%= expense.expense_category.name %></strong></td>
          <%end%>
          <% if expense.respond_to?(:income_category)%>
              <td><strong class="green">Income <%= expense.income_category.name %></strong></td>
          <%end%>
          <td><%= expense.description %></td>
          <td><%= [expense.created_at, expense.updated_at].max.to_formatted_s(:long)  %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <br>


</div>


