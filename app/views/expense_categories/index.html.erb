<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Expense Categories</h1>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @expense_categories.each do |expense_category| %>
        <tr>
          <td><strong><%= expense_category.name %></strong></td>
          <td><%= link_to 'Edit', edit_expense_category_path(expense_category) %></td>
          <td><%= link_to 'Destroy', expense_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New Expense Category', new_expense_category_path %>
  <br>


</div>
